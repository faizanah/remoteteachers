<%= form_for @user, url: update_user_path, method: :patch do |f|  %>
  <%= hidden_field_tag :setting, "account" %>
  <div class="form-group">
    <br>
    <%= f.label "Server", class: "form-label" %>
    <%= f.select :bbb_server_id, @user.bbb_servers.map {|server| [server.name,server.id]}, {}, { class: "form-control custom-select" }%>
  </div>
  <div class="card-footer">
    <%= f.submit t("update"), class: "btn btn-primary float-right" %>
  </div>
<% end %>
